<%- include('partials/header') %>

<div class="container-fluid">
    <div class="row">
        <!-- Sidebar -->
        <%- include('partials/sidebar') %>

        <!-- Main Content -->
        <main class="col-md-9 ms-sm-auto col-lg-10 px-md-4">
            <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 border-bottom">
                <h1 class="h2">Dashboard</h1>
                <div class="btn-toolbar mb-2 mb-md-0">
                    <div class="btn-group me-2">
                        <button type="button" class="btn btn-sm btn-outline-secondary btn-export">
                            <i class="fas fa-download me-1"></i> Export
                        </button>
                    </div>
                    <a href="/admin/members/new" class="btn btn-sm btn-primary">
                        <i class="fas fa-plus"></i> Add Member
                    </a>
                </div>
            </div>

            <!-- Stats Cards -->
            <div class="row mb-4">
                <div class="col-md-4">
                    <div class="card text-white bg-primary mb-3">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="card-title">Total Members</h6>
                                    <h2 class="mb-0" id="totalMembers">0</h2>
                                </div>
                                <i class="fas fa-users fa-3x opacity-50"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-white bg-success mb-3">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="card-title">Active Members</h6>
                                    <h2 class="mb-0" id="activeMembers">0</h2>
                                </div>
                                <i class="fas fa-user-check fa-3x opacity-50"></i>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card text-white bg-warning mb-3">
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center">
                                <div>
                                    <h6 class="card-title">New This Month</h6>
                                    <h2 class="mb-0" id="newMembers">0</h2>
                                </div>
                                <i class="fas fa-chart-line fa-3x opacity-50"></i>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Recent Members -->
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Recent Members</h5>
                    <a href="/admin/members" class="btn btn-sm btn-outline-secondary">View All</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover" id="membersTable">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>ID Number</th>
                                    <th>Activity</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <!-- Will be populated by JavaScript -->
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </main>
    </div>
</div>

<!-- View Member Modal -->
<div class="modal fade" id="viewMemberModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Member Details</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="memberDetails">
                <!-- Will be populated by JavaScript -->
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary" id="downloadCardBtn">
                    <i class="fas fa-download"></i> Download Card
                </button>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Fetch dashboard stats
    fetch('/admin/dashboard/stats', {
        credentials: 'same-origin'
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            document.getElementById('totalMembers').textContent = data.stats.totalMembers;
            document.getElementById('activeMembers').textContent = data.stats.activeMembers;
            document.getElementById('newMembers').textContent = data.stats.newMembers;
        }
    })
    .catch(error => console.error('Error:', error));

    // Fetch recent members
    fetch('/admin/dashboard/recent-members', {
        credentials: 'same-origin'
    })
    .then(response => response.json())
    .then(data => {
        if (data.success) {
            const tbody = document.querySelector('#membersTable tbody');
            tbody.innerHTML = ''; // Clear existing rows

            data.members.forEach(member => {
                const row = document.createElement('tr');
                
                // Format date
                const date = new Date(member.createdAt).toLocaleDateString();
                
                // Status badge
                let statusBadge = '';
                if (member.status === 'approved') {
                    statusBadge = '<span class="badge bg-success">Approved</span>';
                } else if (member.status === 'rejected') {
                    statusBadge = '<span class="badge bg-danger">Rejected</span>';
                } else {
                    statusBadge = '<span class="badge bg-warning">Pending</span>';
                }

                row.innerHTML = `
                    <td>${member._id}</td>
                    <td>${member.fullName || 'N/A'}</td>
                    <td>${member.idNumber || 'N/A'}</td>
                    <td>${member.activity || 'N/A'}</td>
                    <td>${statusBadge}</td>
                    <td>
                        <a href="/admin/members/${member._id}" class="btn btn-sm btn-info">
                            <i class="fas fa-eye"></i> View
                        </a>
                    </td>
                `;
                tbody.appendChild(row);
            });
        }
    })
    .catch(error => console.error('Error:', error));

    // Set up export button
    document.querySelector('.btn-export')?.addEventListener('click', function() {
        window.location.href = '/admin/members/export';
    });
});
</script>

<%- include('partials/footer') %>
